@model WebNotes.Models.UserListViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Список пользователей</h2>
@Html.ValidationSummary()
<table border="1">

    <tr>
        <td>ID</td>
        <td>Login</td>
        <td>FirstName</td>
        <td>SecondName</td>
        <td>LastName</td>
        <td>Email</td>
        <td>Status</td>
        
        
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.SecondName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Status</td>
            <td>  @Html.ActionLink("Изменить", "Change", "User", new { id = user.Id }, null)</td>
        </tr>

    }

</table>

<div>
   @Html.ActionLink("Добавить пользователя", "CreateUser", "User")
</div>
<div>
    @Html.ActionLink("Вернуться назад", "Index", "Home")
</div>

